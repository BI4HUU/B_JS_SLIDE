			div
				canvas#canv
				script function draw(){window.requestAnimationFrame(draw),t+=inc;for(var n=1;n>=0;n-=inc)for(var r=1;r>=0;r-=inc){var a=(r*wh+n)*wh*4,e=n,i=r,h=Math.sqrt(e*e+i*i),o=oct(n,r),c=oct(n+2,r+t/3),u=oct(n+.3*h+o/22+.7,r+c/5+2),d=oct(n+o/3+4*t,r+c/3+5),w=.7*oct(n+u/5,r+d/2)+.15,m=o*d/2,f=c*u/2;id[a+0]=hue(w+m/5),id[a+1]=hue(w/3+f/5+m),id[a+2]=hue(m+f),id[a+3]=hue(1-ease(h)*(f+m)*5)}$.putImageData(img,0,0)}function hue(t){return 255*Math.min(Math.max(t,0),1)}function ease(t){return t>.2?0:i(1,0,6*t)}function i(t,n,r){return r=r*r*r*(6*r*r-15*r+10),t+(n-t)*r}function n(t,n){var r=Math.abs(t*wh+n)%w2h;return arr[r]}function oct(t,n){return p(3*t,4*n)+.5*p(4*t,5*n)}function p(t,r){var a=Math.floor(t),e=Math.floor(r);return i(i(n(a,e),n(a+1,e),t-a),i(n(a,e+1),n(a+1,e+1),t-a),r-e)}var c=document.getElementById("canv"),$=c.getContext("2d");document.body.clientWidth;var wh=128,w2h=wh*wh;c.width=c.height=wh;for(var img=$.createImageData(wh,wh),id=img.data,t=1,inc=1/wh,arr=[],k=0;k<w2h;++k)arr[k]=1.5*Math.random()-.5;var db=document.body;draw();
